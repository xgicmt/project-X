<div class="row">
  <div class="col-md-4">
  	<img src="<%= @sponsor.logo %>" class="sponsorLogo" height="100" alt="Logo" />
    <p class="sponsorName"><%= @sponsor.name %></p>

    <p class="sponsorAddress"><%= @sponsor.address_street %><br>
    <%= @sponsor.address_city %>, <%= @sponsor.address_state %> <%= @sponsor.address_zipcode %></p>
    <p class="sponsorPhone"><%= toPhone(@sponsor.phone_number) %></p>
    <p class="sponsorWebsite"><a href="http://<%= @sponsor.website %>" target="_blank"><%= @sponsor.website %></a></p>
    <div class="sponsorSynopsis"><%= markdown_to_html @sponsor.synopsis %></div>
  </div>
  <div class="col-md-4">
    <h2>Edit Sponsor</h2>
    <%= form_for @sponsor do |f| %>
      <p>
        <%= f.label :name %>
	    <%= f.text_field :name, class: 'form-control', required: true, placeholder: "Company Name" %>
      </p>
      <p>Address</p>
      <p>
        <%= f.label "Street" %>
        <%= f.text_field :address_street, class: 'form-control', required: true, placeholder: "Street Address" %>
      </p>
      <p>
        <%= f.label "City" %>
        <%= f.text_field :address_city, class: 'form-control', required: true, placeholder: "City" %>
      </p>
      <p>
        <%= f.label "State" %>
        <%= f.text_field :address_state, class: 'form-control', required: true, placeholder: "State" %>
      </p>
      <p>
        <%= f.label "Zipcode" %>
        <%= f.text_field :address_zipcode, class: 'form-control', required: true, placeholder: "zipcode" %>
      </p>
      <p>
        <%= f.label :phone_number %>
        <%= f.text_field :phone_number, class: 'form-control', required: true, placeholder: "123-456-7890" %>
      </p>
      <p>
        <%= f.label :website %>
        <%= f.text_field :website, class: 'form-control', required: true, placeholder: "www.example.com" %>
      </p>
      <p>
        <%= f.label :synopsis %>
        <%= f.text_area :synopsis, rows: 8, cols: 45, class: 'form-control markdown-toolbar', placeholder: "Enter synopsis here" %>
      </p>
      <p>
        <%= f.label :logo %>
        <%= f.file_field :logo %>
        <%= f.hidden_field :logo_cache %>
      </p>
      <p>
      <%= f.submit "Save Profile", class: 'btn btn-success' %>
      </p>
    <% end %>


  </div>


</div>